{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "types": [],
    "lib": ["es2017", "es2015"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", ".eslintrc.js"]
}
